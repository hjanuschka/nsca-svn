# Source code directories
SRC_BASE=./src/
SRC_COMMON=./common/

all:	
	cd $(SRC_BASE); $(MAKE) $@ ; cd ..

nsca:
	cd $(SRC_BASE); $(MAKE) $@ ; cd ..

send_nsca:
	cd $(SRC_BASE); $(MAKE) $@ ; cd ..

clean:
	cd $(SRC_BASE); $(MAKE) $@ ; cd ..
	rm -f core
	rm -f *~ */*~
	rm -f conf.libmcrypttest config.log config.status config.cache nsca.cfg Makefile send_nsca.cfg $(SRC_COMMON)config.h

distclean: clean

devclean: clean

